---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout>
  <h2>Blogroll</h2>
  <section>
    <h3>Blogs</h3>
    <ul>
      <li><a href="https://www.artofmanliness.com/">Art of Manliness</a></li>
      <li><a href="https://bricolage.io/">Kyle Mathews</a></li>
      <li><a href="https://lazybear.io">lazybear.io</a></li>
      <li><a href="https://garrit.xyz"></a>Garrit Franke</li>
      <li><a href="https://gurwinder.substack.com/">The Prism</a></li>
      <li><a href="https://medium.com/@_ericelliott">Eric Elliott</a></li>
      <li><a href="https://jason.energy">Jason Lengstorf</a></li>
      <li><a href="https://www.learnwithjason.dev/">Learn With Jason</a></li>
    </ul>
  </section>
  <section>
    <h3>Newsletters</h3>
    <ul>
      <li><a href="https://nodeweekly.com/">Node Weekly</a></li>
      <li><a href="https://javascriptweekly.com/">JavaScript Weekly</a></li>
      <li><a href="https://frontendfoc.us/">Frontend Focus</a></li>
    </ul>
  </section>
</BaseLayout>
<style>
  ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
    color: rgb(var(--text-primary));
  }
  ul li {
    width: calc(50% - 1rem);
    margin: 0.5em 0;
  }
  ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  ul li a {
    color: rgb(var(--text-primary));
  }
  ul li a:hover {
    color: var(--accent);
  }
  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      width: 100%;
    }
  }
  section {
    margin-top: 2em;
  }
</style>
