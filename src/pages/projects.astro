---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 720px;
      }
      ul {
        margin: 0;
        padding: 0;
        color: rgb(var(--text));
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li a {
        display: block;
        color: rgb(var(--text));
      }
      ul li a:hover {
        color: var(--accent);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          <li>
            <a href="https://gymbutler.cavender.io/">GymButler</a>
          </li>
          <li>
            <a href="https://simpledex.cavender.io">SimpleDex</a>
          </li>
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
