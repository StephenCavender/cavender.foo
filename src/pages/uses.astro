---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout>
  <h2>Uses</h2>
  <div>
    <section>
      <h3>Software</h3>
      <ul>
        <li>Editors: Zed, Vim</li>
        <li>Terminal: Kitty, Alacritty, Tmux</li>
        <li>Browser: Librewolf</li>
        <li>Notes: Bear</li>
        <li>Recording: LICEcap</li>
        <li>Music: Spotify</li>
        <li>Productivity: Raycast</li>
        <li>Investing: Thinkorswim</li>
        <li>Feeds: Newsboat</li>
      </ul>
    </section>
    <section>
      <h3>Hardware</h3>
      <ul>
        <li>MacBook Air</li>
        <li>iPhone 13 Pro</li>
        <li>Velocifire Mechanical Keyboard</li>
        <li>Bose QC 35</li>
        <li>Secret Lab Chair</li>
        <li>Branch Sit/Stand Desk</li>
        <li>Logitech MX Master 2</li>
      </ul>
    </section>
    <section>
      <h3>Fitness</h3>
      <ul>
        <li>Signature Fitness fold-out rack</li>
        <li>EXmark men's olympic barbell</li>
        <li>Vulcan fleck colored plates</li>
        <li>Random assortment of hex dumbells</li>
        <li>Rep fitness jump rope</li>
        <li>Adidas lifting shoes</li>
        <li>Reebok CrossFit shoes</li>
        <li>Knee wraps</li>
      </ul>
    </section>
    <section>
      <h3>Supplements</h3>
      <ul>
        <li>Creatine</li>
        <li>Protein</li>
        <li>Vitamin D</li>
        <li>Magnesium</li>
      </ul>
    </section>
    <section>
      <h3>Music</h3>
      <ul>
        <li>Red Fender strat lookalike?</li>
        <li>Blue Fender strat</li>
        <li>Fender Acoustic</li>
        <li>Taylor Acoustic</li>
        <li>Marshall mini Amp</li>
        <li>Boss ME-60 Pedal</li>
      </ul>
    </section>
  </div>
</BaseLayout>
<style>
  div {
    display: grid;
    gap: 1em 1.25em;
    grid-template-columns: repeat(auto-fill, minmax(min(10rem, 100%), 1fr));
  }
  section {
    margin-top: 2em;
  }
</style>
