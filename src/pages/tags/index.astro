---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
const articles = await getCollection("articles");
const tags = [...new Set(articles.map((article) => article.data.tags).flat())];
---

<!-- todo: add number of articles with that tag -->
<BaseLayout>
  <h2>Tags</h2>
  <section>
    <ul>
      {
        tags.map((tag) => (
          <li>
            <a href={`/tags/${tag}/`}>{tag}</a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
<style>
  ul {
    columns: 3;
  }
</style>
