---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";

// Get the environment to determine whether to show drafts
const isDev = import.meta.env.DEV;

// Filter projects based on environment and exclude template
const allProjects = await getCollection("projects");
const projects = allProjects
  .filter((project) => {
    // Exclude template file and respect draft status
    return (
      !project.id.startsWith("_template") && (isDev || !project.data.draft)
    );
  })
  .sort((a, b) => {
    // Sort by status first (active > in-development > archived), then by name
    const statusOrder = { active: 0, "in-development": 1, archived: 2 };
    const aStatus = a.data.status ? statusOrder[a.data.status] : 3;
    const bStatus = b.data.status ? statusOrder[b.data.status] : 3;

    if (aStatus !== bStatus) {
      return aStatus - bStatus;
    }

    // Otherwise sort by name
    return a.data.name.localeCompare(b.data.name);
  });

// Get template if in dev mode
const template = isDev
  ? (
      await getCollection("projects", (project) =>
        project.id.startsWith("_template")
      )
    ).at(0)
  : null;
---

<BaseLayout>
  <h2>Projects</h2>
  <div
    style="display: flex; justify-content: space-between; align-items: center;"
  >
    <div></div>
    <a href="/projects/tags/">Browse by Tags</a>
  </div>
  <section>
    {
      isDev && template && (
        <div class="template-container">
          <h3>Project Template</h3>
          <p>This template is only visible in development mode</p>
          <a href={`/projects/${template.slug}/`} class="template-link">
            View Template
          </a>
        </div>
      )
    }
    <ul class="projects-list">
      {
        projects.map((project) => (
          <li class="project-item">
            <div class="project-header">
              {project.data.url ? (
                <a
                  href={project.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="project-name"
                >
                  {project.data.name} â†—
                </a>
              ) : (
                <span class="project-name">{project.data.name}</span>
              )}
              <span class="status-badge status-{project.data.status}">
                {project.data.status}
              </span>
            </div>
            <p class="project-description">{project.data.description}</p>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
<style>
  .projects-list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  .project-item {
    padding: 1rem 0;
    border-bottom: 1px solid var(--line);
  }

  .project-item:last-child {
    border-bottom: none;
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .project-name {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .project-header a.project-name {
    text-decoration: none;
  }

  .project-header a.project-name:hover {
    color: var(--text-link);
  }

  .status-badge {
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  .status-active {
    background-color: #4caf50;
    color: white;
  }

  .status-in-development {
    background-color: #ff9800;
    color: white;
  }

  .status-archived {
    background-color: #9e9e9e;
    color: white;
  }

  .project-description {
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .template-container {
    background-color: #4a3f7d;
    border: 2px dashed #8269ff;
    padding: 1rem;
    margin-bottom: 2rem;
    border-radius: 8px;
  }

  .template-link {
    display: inline-block;
    background-color: #8269ff;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    margin-top: 0.5rem;
  }

  .template-link:hover {
    background-color: #6a4dff;
  }
</style>
