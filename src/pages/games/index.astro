---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";

// Get the environment to determine whether to show drafts
const isDev = import.meta.env.DEV;

// Filter games based on environment and exclude template
const allGames = await getCollection("games");
const games = allGames
  .filter((game) => {
    // Exclude template file and respect draft status
    return !game.id.startsWith("_template") && (isDev || !game.data.draft);
  })
  .sort((a, b) => {
    // Sort by status first (playing > played > unplayed), then by title
    const statusOrder = { playing: 0, played: 1, unplayed: 2 };
    const aStatus = statusOrder[a.data.status] || 3;
    const bStatus = statusOrder[b.data.status] || 3;

    if (aStatus !== bStatus) {
      return aStatus - bStatus;
    }

    // Otherwise sort by title
    return a.data.title.localeCompare(b.data.title);
  });

// Get template if in dev mode
const template = isDev
  ? (
      await getCollection("games", (game) => game.id.startsWith("_template"))
    ).at(0)
  : null;
---

<BaseLayout>
  <h2>Video Games</h2>
  <div
    style="display: flex; justify-content: space-between; align-items: center;"
  >
    <div></div>
    <a href="/games/tags/">Browse by Tags</a>
  </div>
  <section>
    {
      isDev && template && (
        <div class="template-container">
          <h3>Game Template</h3>
          <p>This template is only visible in development mode</p>
          <a href={`/games/${template.slug}/`} class="template-link">
            View Template
          </a>
        </div>
      )
    }
    <ul>
      {
        games.map((game) => (
          <li>
            <span class="status-badge status-{game.data.status}">
              {game.data.status}
            </span>
            <a href={`/games/${game.slug}/`}>
              {game.data.title}
              {game.data.draft && <span class="draft-indicator">[DRAFT]</span>}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
<style>
  li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .status-badge {
    flex: 0 0 80px;
    min-width: 80px;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: bold;
    text-align: center;
    text-transform: uppercase;
  }
  .status-playing {
    background-color: #4caf50;
    color: white;
  }
  .status-played {
    background-color: #2196f3;
    color: white;
  }
  .status-unplayed {
    background-color: #9e9e9e;
    color: white;
  }
  .draft-indicator {
    margin-left: 0.5rem;
    color: #ff6b6b;
    font-size: 0.85em;
    font-weight: bold;
  }
  .template-container {
    background-color: #4a3f7d;
    border: 2px dashed #8269ff;
    padding: 1rem;
    margin-bottom: 2rem;
    border-radius: 8px;
  }
  .template-link {
    display: inline-block;
    background-color: #8269ff;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    margin-top: 0.5rem;
  }
  .template-link:hover {
    background-color: #6a4dff;
  }
</style>
