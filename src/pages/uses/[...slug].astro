---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import FormattedDate from "../../components/FormattedDate.astro";

export async function getStaticPaths() {
  const usesEntries = await getCollection("uses", (entry) => !entry.data.draft);

  return usesEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout>
  <article class="uses-entry">
    <h1>Uses / <FormattedDate date={entry.data.pubDate} /></h1>

    <div class="entry-content">
      <Content />
    </div>

    <div class="entry-footer">
      <a href="/uses" class="back-link">‚Üê Back to Current Uses</a>
    </div>
  </article>
</BaseLayout>

<style>
  .uses-entry {
    max-width: 65ch;
    margin: 0 auto;
  }

  .entry-footer {
    margin-top: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent-hover);
    text-decoration: underline;
  }

  .entry-meta {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 1rem;
  }

  .updated-date {
    margin-left: 0.5rem;
    font-style: italic;
  }

  .entry-content {
    margin-bottom: 3rem;
  }

  .entry-footer {
    border-top: 1px solid var(--border-color);
    padding-top: 1rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent-hover);
    text-decoration: underline;
  }

  /* Dark mode support */
  :root {
    --text-secondary: #666;
    --border-color: #e0e0e0;
    --accent-color: #0066cc;
    --accent-hover: #0052a3;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --text-secondary: #999;
      --border-color: #333;
      --accent-color: #4da6ff;
      --accent-hover: #66b3ff;
    }
  }
</style>
