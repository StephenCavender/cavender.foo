---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout>
  <h2>Bookmarks</h2>
  <p>A list of sites I like to have handy.</p>
  <div>
    <section>
      <h3>Dev</h3>
      <ul>
        <li><a href="https://free-for.dev/#/">free-for.dev</a></li>
        <li><a href="https://github.com/sindresorhus/awesome">awesome</a></li>
        <li>
          <a href="https://github.com/awesome-selfhosted/awesome-selfhosted"
            >awesome-selfhosted</a
          >
        </li>
        <li>
          <a href="https://github.com/agarrharr/awesome-cli-apps"
            >awesome-cli-apps</a
          >
        </li>
        <li><a href="https://htmlrev.com/">HTMLrev</a></li>
        <li><a href="https://flems.io/">Flems web dev playground</a></li>
      </ul>
    </section>

    <section>
      <h3>Cheat Sheets</h3>
      <ul>
        <li><a href="https://devhints.io/">Devhints.io</a></li>
      </ul>
    </section>

    <section>
      <h3>Job</h3>
      <ul>
        <li><a href="https://stillhiring.today/">StillHiring.today</a></li>
      </ul>
    </section>

    <section>
      <h3>Images / Icons</h3>
      <ul>
        <li><a href="https://www.photopea.com/">PhotoPea</a></li>
        <li><a href="https://svgomg.net/">SVGOMG</a></li>
        <li>
          <a href="https://realfavicongenerator.net/">favicon generator</a>
        </li>
        <li><a href="https://icones.js.org/">icones</a></li>
      </ul>
    </section>

    <section>
      <h3>Misc</h3>
      <ul>
        <li><a href="https://looks.wtf/">looks.wtf</a></li>
        <li><a href="https://crontab.guru/">crontab.guru</a></li>
      </ul>
    </section>
  </div>
</BaseLayout>

<style>
  div {
    display: grid;
    gap: 1em 1.25em;
    grid-template-columns: repeat(auto-fill, minmax(min(10rem, 100%), 1fr));
  }
  section {
    margin-top: 2em;
  }
</style>
